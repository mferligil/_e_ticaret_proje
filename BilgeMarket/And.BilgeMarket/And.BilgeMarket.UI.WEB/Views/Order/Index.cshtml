@model IEnumerable<And.BilgeMarket.Core.Model.Entity.Order>

@{
    ViewBag.Title = "Index";
}

<h2>Siparişlerin</h2>


<table class="table">
    <tr>

        <th>
            Sipariş No
        </th>
        <th>
            Sipariş Durumu
        </th>            
        <th>
            Toplam Fiyat
        </th>               
        <th>
            Oluşturulma Tarihi
        </th>
        
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Status.Name)
        </td>        
        <td>
            @Html.DisplayFor(modelItem => item.TotalProductPrice)
        </td>        
        <td>
            @Html.DisplayFor(modelItem => item.CreateDate)
        <td>
            
            @Html.ActionLink("Sipariş Detayı", "Detail", new { id=item.ID })
        </td>
    </tr>
}

</table>
